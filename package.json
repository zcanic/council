{
  "name": "parliament-loop",
  "version": "1.0.0",
  "description": "AI驱动的智慧提纯对话系统",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset --force",
    "studio": "prisma studio",
    "deploy": "bash scripts/deploy.sh",
    "dev:perfect": "next dev --turbo",
    "build:perfect": "npm run lint:fix && npm run type-check && next build",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit --skipLibCheck",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf .next && rm -rf dist && rm -rf node_modules/.cache",
    "analyze": "ANALYZE=true npm run build",
    "migrate:perfect": "prisma migrate dev && prisma generate && npm run db:seed",
    "perfect": "npm run clean && npm run type-check && npm run lint:fix && npm run build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.25.0",
    "@prisma/client": "^5.17.0",
    "clsx": "^2.1.1",
    "express": "^5.1.0",
    "lucide-react": "^0.414.0",
    "next": "14.2.5",
    "openai": "^4.55.0",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "jest": "^29.7.0",
    "postcss": "^8",
    "prisma": "^5.17.0",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.3",
    "tsx": "^4.20.3",
    "typescript": "^5"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
