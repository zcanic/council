# Parliament Loop 生产环境配置模板
# 复制为 .env.production 并修改对应的值

# ================================
# 数据库配置
# ================================
DATABASE_URL="mysql://council_user:your_secure_password@localhost:3306/parliament_loop"

# ================================
# 应用基础配置
# ================================
NODE_ENV="production"
PORT=3000
NEXT_PUBLIC_API_URL="https://parliament.yourdomain.com"

# ================================
# AI服务配置
# ================================
# 选项1：使用OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_BASE_URL="https://api.openai.com/v1"
AI_MODEL_NAME="gpt-3.5-turbo"

# 选项2：使用本地Ollama（推荐）
# OPENAI_API_KEY="test-api-key-12345"
# OPENAI_BASE_URL="http://localhost:11434/v1"
# AI_MODEL_NAME="qwen2:0.5b"

# ================================
# 安全配置
# ================================
# JWT密钥（如果有用户认证）
JWT_SECRET="your-super-secure-jwt-secret-key-here"

# 加密密钥
ENCRYPTION_KEY="your-32-character-encryption-key"

# ================================
# 性能配置
# ================================
# Next.js缓存配置
NEXT_CACHE_SIZE="100MB"

# 数据库连接池
DB_POOL_SIZE=10

# ================================
# 监控配置
# ================================
# Sentry错误监控（可选）
# SENTRY_DSN="https://your-sentry-dsn-here"

# 日志级别
LOG_LEVEL="info"

# ================================
# 邮件配置（如果需要）
# ================================
# SMTP_HOST="smtp.yourdomain.com"
# SMTP_PORT=587
# SMTP_USER="noreply@yourdomain.com"
# SMTP_PASS="your-smtp-password"

# ================================
# 社交登录配置（如果需要）
# ================================
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GITHUB_CLIENT_ID="your-github-client-id"
# GITHUB_CLIENT_SECRET="your-github-client-secret"

# ================================
# 文件上传配置
# ================================
# 最大文件大小 (MB)
MAX_FILE_SIZE=10

# 上传目录
UPLOAD_DIR="/www/wwwroot/parliament.yourdomain.com/uploads"

# CDN配置（如果使用）
# CDN_URL="https://cdn.yourdomain.com"

# ================================
# 缓存配置
# ================================
# Redis配置（如果使用）
# REDIS_URL="redis://localhost:6379"

# 内存缓存TTL（秒）
CACHE_TTL=300

# ================================
# 限流配置
# ================================
# API调用限制
RATE_LIMIT_WINDOW=900000  # 15分钟
RATE_LIMIT_MAX=100        # 最大请求数

# 评论频率限制
COMMENT_RATE_LIMIT=10     # 15分钟内最多评论数
